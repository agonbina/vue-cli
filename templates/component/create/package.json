{
    "name": "{{ name }}",
    "private": true,
    "version": "0.1.0",
    "description": "{{ description }}",
    "main": "index.js",
<% if(author !== '' && email !== '') { %>
    "author": "{{ author }} <{{ email }}>",
<% } %>
    "dependencies": {
<% if(components.length !== 0) { %>
    <% _.forEach(components, function(component) { %>
        "{{ component.name }}": "{{ itemGitUrl(component, git) }}",
    <% }); %>
<% } %>

<% if(mixins.length !== 0) { %>
    <% _.forEach(mixins, function(mixin, index, array) { %>
        "{{ mixin.name }}": "{{ itemGitUrl(mixin, git) }}"<% if(notLast(index, array)) { %> {{ print(',') }} <% } %>
    <% }); %>
<% } %>
    }
}
